<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/result_tv"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"

        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="40dp" />

    <TextView
        android:id="@id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_layout"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="65dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#CDAD4D"
        android:paddingVertical="16dp"
        android:id="@+id/buttons_layout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="34dp"
               style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

               android:textColor="@color/white"
                android:backgroundTint="#FF0000"
               android:textSize="34dp"
               android:id="@+id/button_c"
               android:layout_margin="12dp"
               android:text="C"

               />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="34dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

                android:textColor="@color/white"
                android:textSize="34dp"
                android:backgroundTint="#41532C"
                android:id="@+id/button_open_bracket"
                android:layout_margin="12dp"
                android:text="("

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="34dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

                android:textColor="@color/white"
                android:textSize="34dp"
                android:backgroundTint="#41532C"
                android:id="@+id/button_close_bracket"
                android:layout_margin="12dp"
                android:text=")"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="34dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

                android:textColor="@color/white"
                android:backgroundTint="#FF5722"
                android:textSize="34dp"
                android:id="@+id/button_divide"
                android:layout_margin="12dp"
                android:text="/"

                />







        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="34dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

                android:textColor="@color/white"
                android:textSize="34dp"
                android:id="@+id/button_7"
                android:layout_margin="12dp"
                android:text="7"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="34dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

                android:textColor="@color/white"
                android:textSize="34dp"
                android:id="@+id/button_8"
                android:layout_margin="12dp"
                android:text="8"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="34dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

                android:textColor="@color/white"
                android:textSize="34dp"
                android:id="@+id/button_9"
                android:layout_margin="12dp"
                android:text="9"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="34dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

                android:textColor="@color/white"
                android:backgroundTint="#FF5722"
                android:textSize="35dp"
                android:id="@+id/button_multiply"
                android:layout_margin="12dp"
                android:text="X"

                />







        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="34dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

                android:textColor="@color/white"
                android:textSize="34dp"
                android:id="@+id/button_4"
                android:layout_margin="12dp"
                android:text="4"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="34dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

                android:textColor="@color/white"
                android:textSize="34dp"
                android:id="@+id/button_5"
                android:layout_margin="12dp"
                android:text="5"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="34dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

                android:textColor="@color/white"
                android:textSize="34dp"
                android:id="@+id/button_6"
                android:layout_margin="12dp"
                android:text="6"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="34dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

                android:textColor="@color/white"
                android:backgroundTint="#FF5722"
                android:textSize="35dp"
                android:id="@+id/button_plus"
                android:layout_margin="12dp"
                android:text="+"

                />







        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="34dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

                android:textColor="@color/white"
                android:textSize="34dp"
                android:id="@+id/button_1"
                android:layout_margin="12dp"
                android:text="1"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="34dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

                android:textColor="@color/white"
                android:textSize="34dp"
                android:id="@+id/button_2"
                android:layout_margin="12dp"
                android:text="2"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="34dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

                android:textColor="@color/white"
                android:textSize="34dp"
                android:id="@+id/button_3"
                android:layout_margin="12dp"
                android:text="3"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="34dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

                android:textColor="@color/white"
                android:backgroundTint="#FF5722"
                android:textSize="35dp"
                android:id="@+id/button_minus"
                android:layout_margin="12dp"
                android:text="-"

                />







        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="34dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

                android:textColor="@color/white"
                android:textSize="18dp"
                android:id="@+id/button_ac"
                android:backgroundTint="#FF0000"
                android:layout_margin="12dp"
                android:text="AC"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="34dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

                android:textColor="@color/white"
                android:textSize="34dp"
                android:id="@+id/button_0"
                android:layout_margin="12dp"
                android:text="0"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="34dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

                android:textColor="@color/white"
                android:textSize="34dp"
                android:id="@+id/button_dot"
                android:layout_margin="12dp"
                android:text="."

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="34dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"

                android:textColor="@color/white"
                android:backgroundTint="#FF5722"
                android:textSize="35dp"
                android:id="@+id/button_equals"
                android:layout_margin="12dp"
                android:text="="

                />







        </LinearLayout>


    </LinearLayout>

</RelativeLayout>